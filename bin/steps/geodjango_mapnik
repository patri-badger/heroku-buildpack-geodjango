#!/usr/bin/env bash

# This script extends the GDAL build step of the
# [**GeoDjango Buildpack**](https://github.com/dulaccc/heroku-buildpack-geodjango)
# compiler, in [**GeoDjango Buildpack by Badger**](https://github.com/patri-badger/heroku-buildpack-geodjango/).
#
# A [buildpack](http://devcenter.heroku.com/articles/buildpacks) is an
# adapter between a Python application and Heroku's runtime.
#
# This script is invoked by [`bin/compile`](/).

# Syntax sugar.


if [ -e $CACHE_DIR/.mapnik ]; then
  echo 'Python Mapnik is already installed.' | indent
else  

  APT_CACHE_DIR="$CACHE_DIR/apt/cache"
  APT_STATE_DIR="$CACHE_DIR/apt/state"

  mkdir -p "$APT_CACHE_DIR/archives/partial"
  mkdir -p "$APT_STATE_DIR/lists/partial"

  APT_OPTIONS="-o debug::nolocking=true -o dir::cache=$APT_CACHE_DIR -o dir::state=$APT_STATE_DIR"

  echo "Updating apt-get" | indent
  apt-get $APT_OPTIONS update | indent
  
  echo "Installing python-software-properties" | indent
  apt-get $APT_OPTIONS -y --force-yes -d install --reinstall software-properties-common python-software-properties | indent
  
  echo "List deb packages" | indent
  ls -1 $APT_CACHE_DIR/archives
  
  echo "Installing python-software-properties deb packages" | indent
  for DEB in $(ls -1 $APT_CACHE_DIR/archives/*.deb); do
    dpkg -x $DEB $BUILD_DIR/.heroku/
  done
  
  echo "Deleting apt cache" | indent
  rm -fr "$CACHE_DIR/apt"
  
  APT_CACHE_DIR="$CACHE_DIR/apt/cache"
  APT_STATE_DIR="$CACHE_DIR/apt/state"

  mkdir -p "$APT_CACHE_DIR/archives/partial"
  mkdir -p "$APT_STATE_DIR/lists/partial"
  
  echo "Installing python-mapnik" | indent
  apt-get $APT_OPTIONS -y --force-yes -d install --reinstall libmapnik libmapnik-dev mapnik-utils python-mapnik | indent  
  
  echo "Installing apt-get deb packages" | indent
  for DEB in $(ls -1 $APT_CACHE_DIR/archives/*.deb); do
    dpkg -x $DEB $BUILD_DIR/.heroku/
  done
  
  touch $CACHE_DIR/.mapnik | indent
  echo "Mapnik installed." | indent
fi
